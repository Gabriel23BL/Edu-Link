<div class="max-w-4xl mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <!-- Encabezado -->
  <div class="flex items-center space-x-6 mb-6">
    <!-- Imagen de perfil clickable -->
    <form id="formFoto" action="/usuario/cargar-foto" method="POST" enctype="multipart/form-data">
      <label for="fotoInput" class="cursor-pointer">
        <img src="<%= user.foto || '/uploads/default.png' %>"
             alt="Foto de perfil" 
             class="w-24 h-24 rounded-full border-4 border-blue-500 shadow hover:opacity-80 transition">
      </label>
      <!-- Input oculto -->
      <input type="file" id="fotoInput" name="foto" accept="image/*" class="hidden" onchange="document.getElementById('formFoto').submit()" />
    </form>

    <div>
      <h2 class="text-2xl font-bold text-gray-800"><%= user?.nombre %></h2>
      <p class="text-gray-600"><%= user?.correo %></p>
      <span class="inline-block mt-2 px-3 py-1 text-sm rounded-full 
                   bg-blue-100 text-blue-700 font-semibold">
        Rol: <%= user?.rol %>
      </span>
    </div>
  </div>

  <!-- Información adicional -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Datos personales -->
    <div class="bg-gray-50 p-4 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-2">Datos personales</h3>
      <ul class="space-y-2 text-gray-700">
        <li><strong>Nombre:</strong> <%= user?.nombre %></li>
        <li><strong>Correo:</strong> <%= user?.correo %></li>
        <li><strong>Rol:</strong> <%= user?.rol %></li>
      </ul>
    </div>

    <!-- Cambiar contraseña -->
    <div class="bg-gray-50 p-6 rounded shadow-sm">
      <h3 class="text-lg font-semibold text-blue-700 mb-4">Cambiar contraseña</h3>
      <form action="/usuario/cambiar-clave" method="POST" class="space-y-4">
        <div>
          <label for="claveActual" class="block font-semibold">Contraseña actual</label>
          <input type="password" id="claveActual" name="claveActual" 
                 class="w-full border p-2 rounded" required />
        </div>
        <div>
          <label for="nuevaClave" class="block font-semibold">Nueva contraseña</label>
          <input type="password" id="nuevaClave" name="nuevaClave" 
                 class="w-full border p-2 rounded" required />
        </div>
        <div>
          <label for="confirmarClave" class="block font-semibold">Confirmar nueva contraseña</label>
          <input type="password" id="confirmarClave" name="confirmarClave" 
                 class="w-full border p-2 rounded" required />
        </div>
        <button type="submit" 
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">
          Guardar nueva contraseña
        </button>
      </form>
    </div>
  </div>
</div>
